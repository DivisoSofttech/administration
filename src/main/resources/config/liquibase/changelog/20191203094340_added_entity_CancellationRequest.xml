    <!--
        Added the entity CancellationRequest.
    -->
    <changeSet id="20191203094340-1" author="jhipster">
        <createTable tableName="cancellation_request">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="order_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="payment_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="customer_email" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="customer_phone" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="store_email" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="store_phone" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="jhi_date" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="refound_details_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_cancellation_request_refound_details_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="cancellation_request" columnName="jhi_date" columnDataType="datetime"/>
        
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
